{
    "name": "john/slim",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "authors": [
        {
            "name": "JohnZCastillo",
            "email": "johnzunigacastillo@gmail.com"
        }
    ],
    "require": {
        "slim/slim": "4.*",
        "slim/psr7": "^1.6",
        "slim/twig-view": "^3.3",
        "doctrine/orm": "^2.15",
        "symfony/cache": "^6.3",
        "uma/dic": "3.0",
        "slim/flash": "^0.4.0",
        "respect/validation": "^2.2",
        "vlucas/phpdotenv": "^5.5",
        "thiagoalessio/tesseract_ocr": "^2.12",
        "gabordemooij/redbean": "^5.7",
        "mobiledetect/mobiledetectlib": "^3.74",
        "tecnickcom/tcpdf": "^6.6",
        "phpmailer/phpmailer": "^6.8",
        "defuse/php-encryption": "^2.4",
        "ifsnop/mysqldump-php": "^2.12",
        "twig/intl-extra": "^3.8",
        "twig/extra-bundle": "^3.8",
        "monolog/monolog": "^3.5",
        "php-di/php-di": "^7.0",
        "beberlei/doctrineextensions": "dev-master",
        "ncjoes/office-converter": "^1.0",
        "phpoffice/phpword": "^1.1"
    },
    "scripts": {
        "start":  [
            "Composer\\Config::disableProcessTimeout",
            "@php -S localhost:8000 -t public"
        ],
        "update-db": "php console/cli-config.php orm:schema-tool:update --force --complete",
        "create-db": "php console/cli-config.php orm:schema-tool:create",
        "test": "/vendor/bin/phpunit tests"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpspec/prophecy-phpunit": "^2.1"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}
